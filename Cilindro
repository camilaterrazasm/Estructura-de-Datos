.h

#pragma once
class Cilindro
{
private:
	float radio;
	float altura;
public:
	Cilindro(void);
	~Cilindro(void);
	float area(float r, float h);

};



.cpp

#include "StdAfx.h"
#include <iostream>
#include "Cilindro.h"
#include "conio.h"
using namespace std;

Cilindro::Cilindro(void)
{
}


Cilindro::~Cilindro(void)
{
}
float Cilindro::area(float r, float h)
{
	float area1;
	area1= (2*3.1416*r*(r+h));
	cout<<"El area del cilindro es:"<<area1<<endl;
	return area1;
}

main
#include "stdafx.h"
